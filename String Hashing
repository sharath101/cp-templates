//Comparing strings in O(1) time

#include<bits/stdc++.h>
using namespace std;
#define ll long long

struct sthash{
    vector<ll> hashs,pows;
    ll p=331;
    ll MOD=1e9+7;
    sthash(string s){
        ll n=s.size();
        hashs.assign(n+1,0);
        pows.assign(n+1,0);
        pows[0]=1;
        for(ll i=1;i<n;i++)
            pows[i]=(pows[i-1]*p)%MOD;
        for(ll i=0;i<n;i++)
            hashs[i+1]=(hashs[i]*p+s[i])%MOD;
    }

    ll gethash(ll l,ll r){    //if u want [l,r] do getHash(l,r);
        return ((hashs[r+1]-(hashs[l]*pows[r-l+1])%MOD)+MOD)%MOD;
    }
};

int main()
{
	string s;
	cin>>s;
    sthash h(s);
    cout<<h.gethash(0,2);
}
